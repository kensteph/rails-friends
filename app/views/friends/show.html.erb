<div class="jmt-4 p-5 bg-secondary text-white rounded">
  <h1 class="display-4"><%=@friend.first_name%> <%=@friend.last_name%></h1>
  <p class="lead"><%=@friend.email%> | <%=@friend.phone%> | <%=@friend.twitter%></p>
  <hr class="my-4">
  <%= link_to "Edit this friend", edit_friend_path(@friend),class:"btn btn-dark" %> 
  <%= link_to "Delete this friend", @friend,data:{turbo_method: :delete, turbo_confirm:'Are you sure' }, class:"btn btn-danger inline" %> 
  <%= link_to "Back to friends", friends_path,class:"btn btn-dark" %>

</div>
